{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true
  },
  "include": ["src/index.tsx"],
  "typeRoots": ["types/index.d.ts"],
  "exclude": ["node_modules"]
}
